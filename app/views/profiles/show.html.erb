<div class="container">
  <div class="wrapper">
    <input class="radio" id="one" name="group" type="radio" checked>
    <input class="radio" id="two" name="group" type="radio">
    <input class="radio" id="three" name="group" type="radio">
    <div class="tabs">
      <label class="tab" id="one-tab" for="one">My Profile</label>
      <label class="tab" id="two-tab" for="two">Suggest new content</label>
    </div>

    <div class="panels">

      <div class="panel" id="one-panel">
        <div class="row">
          <div class="col-6">
          </div>
          <div class="col-6">
            <div class="d-flex align-center flex-end">
              <%=link_to 'Edit account', edit_user_registration_path, class: "animated-border-button-profile"%>
            </div>
          </div>
        </div>

        <div class="profile-info">
          <div class="row">
            <%= image_tag "https://avatars.githubusercontent.com/u/95916189?v=4", id:"avatar-profile"%>
          </div>
          <div class="row">
            <h1><%= @user.first_name %> <%= @user.last_name %></h1>
          </div>
          <div class="row">
            <h1><%= @user.email %></h1>
          </div>
        </div>

    <div class="profile-extrainfo">
      <h3 id="p1">More info:</h3>
      <h3 id="p2">Country:</h3>
      <h3 id="p3">Your topics:</h3>
    </div>

      <div class="panel" id="two-panel">
        <div class="panel-title">Make a suggestion</div>
      </div>
    </div>
  </div>
</div>
